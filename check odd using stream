import java.util.ArrayList;
public class HelloWorld {
    public static void main(String[] args) {
        System.out.println("Try programiz.pro");
         ArrayList<Integer> intt = new  ArrayList<Integer>();
         intt.add(111);
         intt.add(11);
          intt.add(10);
    System.out.println(onlyOddNumbers(intt));
    }
   

public static boolean onlyOddNumbers(ArrayList<Integer> list) {
	return list
			.stream() // parallel stream for faster processing
			.allMatch(x -> x % 2!= 0); 
// Stream allMatch(Predicate predicate) returns whether all elements of this stream match the provided predicate. 
//It may not evaluate the predicate on all elements if not necessary for determining the result. This is a short-circuiting terminal operation.
}
}
